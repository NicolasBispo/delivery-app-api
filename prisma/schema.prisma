generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String?
  email     String
  password  String
  orders    Order[]
}

model Category {
  id   String @id @default(uuid())
  name String
  ads  Ad[]
}

model Ad {
  id           String   @id @default(uuid())
  name         String
  description  String
  priceInCents Int      @default(0)
  categoryId   String
  category     Category @relation(fields: [categoryId], references: [id])
  photos AdPhoto[]
}

model AdPhoto {
  id           String @id @default(uuid())
  fieldname    String
  originalname String
  encoding     String
  mimetype     String
  size         Int
  destination  String
  filename     String
  path         String
  adId String
  ad Ad @relation(fields: [adId], references: [id])
}

model Order {
  id              String      @id @default(uuid())
  orderItems      OrderItem[]
  deliveryAddress String
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  createdAt       DateTime    @default(now())
}

model OrderItem {
  id           String   @id @default(uuid())
  priceInCents Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id])
}


model ServerLog {
  id String @id @default(uuid())
  action String
  message String
}

enum RequestMethod {
  POST
  GET
  PUT
  PATCH
  DELETE
}
model RequestLog{
  id String @id @default(uuid())
  requestMethod RequestMethod
  url String
  clientIp String @db.VarChar(45)
  country String
  timestamp DateTime @default(now())
}